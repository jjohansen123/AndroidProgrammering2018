<resources>

    <!-- Base application theme. -->
    <!--style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar"-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--item name="colorControlHighlight">#69f0ae</item>
        <item name="colorButtonNormal">#536dfe</item>
        <item name="colorControlActivated">#e040fb</item-->
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>    <!-- Text Color of Toolbar Title  -->
        <item name="android:textColorSecondary">@android:color/white</item>  <!-- Color of Overflow Menu ( 3 DOTS icon )
                                                                    and color of Navigation Drawer Icon-->
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="PopupTheme"  parent="ThemeOverlay.AppCompat.Light">

        <item name="android:textColorPrimary">@android:color/black</item>  <!-- Text color of Overflow Menu -->
        <item name="android:background">@android:color/white</item>        <!-- Background of Overflow Menu -->

    </style>


</resources>
