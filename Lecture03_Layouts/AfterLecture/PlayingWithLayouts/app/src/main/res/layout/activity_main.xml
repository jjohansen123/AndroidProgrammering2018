<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonBasics"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"

        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/basics"
        android:contentDescription="@string/layout_basics"
        android:gravity="top|center_horizontal"
        android:onClick="startLayoutBasics"
        android:text="@string/layout_basics"
        app:layout_constraintBottom_toTopOf="@+id/buttonRelativeLayout"
        app:layout_constraintEnd_toStartOf="@+id/buttonLinearLayout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonLinearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/linear_layout"
        android:contentDescription="@string/linear_layout"
        android:gravity="top|center_horizontal"
        android:onClick="startLinearLayout"
        android:text="@string/linear_layout"
        app:layout_constraintBottom_toTopOf="@+id/buttonFrameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonBasics"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/buttonRelativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/relative_layout"
        android:contentDescription="@string/relative_layout"
        android:gravity="top|center_horizontal"
        android:onClick="startRelativeLayout"
        android:text="@string/relative_layout"
        app:layout_constraintBottom_toTopOf="@+id/buttonTableLayout"
        app:layout_constraintEnd_toStartOf="@+id/buttonFrameLayout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBasics" />

    <Button
        android:id="@+id/buttonFrameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/frame_layout"
        android:contentDescription="@string/frame_layout"
        android:gravity="top|center_horizontal"
        android:onClick="startFrameLayout"
        android:text="@string/frame_layout"
        app:layout_constraintBottom_toTopOf="@+id/buttonHierarchyViewer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonRelativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/buttonLinearLayout" />


    <Button
        android:id="@+id/buttonTableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/table_layout"
        android:contentDescription="@string/table_layout"
        android:gravity="top|center_horizontal"
        android:onClick="startTableLayout"
        android:text="@string/table_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonHierarchyViewer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRelativeLayout" />

    <Button
        android:id="@+id/buttonHierarchyViewer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/constraint_layout"
        android:contentDescription="@string/constraint_layout"
        android:gravity="top|center_horizontal"
        android:onClick="startConstraintLayout"
        android:text="@string/constraint_layout"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonTableLayout"
        app:layout_constraintTop_toBottomOf="@+id/buttonFrameLayout" />

</android.support.constraint.ConstraintLayout>
